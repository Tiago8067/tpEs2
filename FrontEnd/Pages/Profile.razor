<h5>Altere a Pass</h5>

<EditForm Model="request" OnValidSubmit="ChangePassword">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3">
        <label for="password">Nova Pass</label>
        <InputText id="password" @bind-Value="request.Pass" class="form-control" type="password" />
        <ValidationMessage For="@(() => request.Pass)" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Confirma a Nova Pass</label>
        <InputText id="confirmPassword" @bind-Value="request.Confirmpass" class="form-control" type="password" />
        <ValidationMessage For="@(() => request.Confirmpass)" />
    </div>
    <button type="submit" class="btn btn-primary">Submete</button>
</EditForm>
@message

